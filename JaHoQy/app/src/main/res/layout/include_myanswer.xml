<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:minHeight="80dp">
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:text="......."
            android:id="@+id/commentuser"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/time"
            android:textSize="10sp"
            android:text=".........."
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xpple.jahoqy.view.RoundImageView
            android:src="@mipmap/default_photo"
            android:id="@+id/up"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/select"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/selectgoodanswer"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/resultima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/answercontent"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:singleLine="false"
        android:text="........."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>